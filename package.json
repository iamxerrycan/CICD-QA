    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run",
    "lint": "eslint .",
    "format": "prettier --write .",
    "all-tests": "npm run lint && npm run test:unit && npm run test:integration && npm run test:e2e"
  },
